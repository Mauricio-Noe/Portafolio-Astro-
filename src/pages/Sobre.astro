       /> 
      </div>
      
    </section>
       
      <section id="Experencia"> 
      </section>
       

      </section>
 
      
           
    <script type="module" >
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('btn-info-dev');
      const infodev = document.getElementById('info-dev');
    
      btn.addEventListener('click', () => {
        infodev.classList.toggle('hidden');
      });
    }); </script>

  </section>


</Layout>

